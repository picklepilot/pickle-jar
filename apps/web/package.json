{
    "name": "web",
    "version": "0.0.17",
    "type": "module",
    "main": "./dist/component-jar.umd.cjs",
    "module": "./dist/component-jar.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/component-jar.js",
            "require": "./dist/component-jar.umd.cjs"
        }
    },
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "public"
    ],
    "scripts": {
        "dev:all": "concurrently \"vite\" \"tailwindcss --cwd ./ -i ./src/style.css -o ./src/output.css --watch\"",
        "dev": "vite",
        "build": "vue-tsc -b && vite build",
        "preview": "vite preview",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\"",
        "generate-algolia-index": "node scripts/generate-algolia-index.js",
        "tailwind:build": "tailwindcss --cwd ./ -i ./src/style.css -o ./src/output.css",
        "tailwind:watch": "tailwindcss --cwd ./ -i ./src/style.css -o ./src/output.css --watch"
    },
    "dependencies": {
        "@floating-ui/vue": "^1.1.5",
        "@headlessui/vue": "insiders",
        "@heroicons/vue": "^2.1.1",
        "@picklepilot/pickle-jar-ui": "workspace:*",
        "@tailwindcss/postcss": "^4.0.0",
        "@tailwindcss/vite": "^4.0.0",
        "@wdns/vue-code-block": "^2.3.5",
        "algoliasearch": "^4.22.1",
        "clsx": "^2.1.1",
        "gray-matter": "^4.0.3",
        "sortablejs": "^1.15.6",
        "sortablejs-vue3": "^1.2.11",
        "vue": "^3.5.13",
        "vue-router": "^4.3.0"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.10",
        "@types/node": "^24.0.1",
        "@types/prismjs": "^1.26.5",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitest/browser": "latest",
        "@vitest/coverage-v8": "latest",
        "@vue/tsconfig": "^0.7.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.0",
        "path": "^0.12.7",
        "playwright": "^1.52.0",
        "postcss": "^8.4.49",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.12",
        "prismjs": "^1.30.0",
        "tailwind-merge": "^2.6.0",
        "tailwindcss": "^4.0.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.6.2",
        "url": "^0.11.4",
        "vite": "^6.0.5",
        "vite-plugin-dts": "^4.4.0",
        "vitest": "latest",
        "vue-tsc": "^2.2.0"
    },
    "packageManager": "pnpm@8.15.4"
}
